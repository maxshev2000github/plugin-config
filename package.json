{
  "name": "@salesforce/plugin-config",
  "description": "sfdx config commands",
  "version": "48.8.0",
  "author": "Salesforce",
  "bugs": "https://github.com/salesforcecli/plugin-config/issues",
  "dependencies": {
    "@oclif/config": "^1",
    "@salesforce/command": "^2.2.0",
    "@salesforce/core": "^2.6.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "salesforce-alm": "^48.23.0",
    "tslib": "^1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@salesforce/dev-config": "1.4.1",
    "@types/chai": "^4",
    "chai": "^4",
    "eslint": "6.6.0",
    "eslint-config-prettier": "6.5.0",
    "mocha": "^5",
    "nyc": "15.0.1",
    "prettier": "1.16.4",
    "shx": "0.2.2",
    "ts-node": "^8.6.2",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/salesforcecli/plugin-config",
  "keywords": [
    "force",
    "salesforce",
    "sfdx",
    "salesforcedx",
    "sfdx-plugin"
  ],
  "license": "BSD-3-Clause",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sfdx",
    "devPlugins": [
      "@oclif/plugin-help"
    ],
    "topics": {
      "hello": {
        "description": "Commands to say hello."
      },
      "config": {
        "description": "Commands for config"
      }
    }
  },
  "repository": "salesforcecli/plugin-config",
  "scripts": {
    "clean:lib": "shx rm -rf lib && shx rm -rf coverage && shx rm -rf .nyc_output && shx rm -f oclif.manifest.json",
    "compile": "tsc -b",
    "build": "yarn run clean:lib && yarn compile",
    "lint": "tslint --project . --config tslint.json --format stylish",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepack": "yarn run build && oclif-dev manifest",
    "reformat": "prettier --config .prettierrc --write './*.{js,json,md}' './**/*.{ts,json,md}'",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "posttest": "yarn lint",
    "version": "oclif-dev readme && git add README.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
